{
  "name": "netlify-build",
  "private": true,
  "version": "0.0.1",
  "description": "Netlify build module",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "docs": "node ./scripts/docs.js",
    "test": "run-s test:* test:dev:*",
    "test-ci": "run-s test:* test:ci:*",
    "test:lint": "eslint --ignore-path .gitignore --fix --cache --format=codeframe --max-warnings=0 \"{packages,examples,scripts}/**/*.js\"",
    "test:prettier": "prettier --ignore-path .gitignore --write --loglevel warn \"{packages,examples,scripts}/**/*.{js,md,yml,json}\" \"*.{js,md,yml,json}\"",
    "test:dev:ava": "ava",
    "test:ci:ava": "nyc -r lcovonly -r text ava",
    "example": "node ./packages/build/src/core/bin.js --config examples/example-two/netlify.yml",
    "debug": "node --inspect-brk ./packages/build/src/core/bin.js --config examples/example-two/netlify.yml"
  },
  "ava": {
    "files": [
      "packages/**/*.test.js"
    ],
    "compileEnhancements": false,
    "babel": false,
    "verbose": true,
    "environmentVariables": {
      "BUILD_TELEMETRY_DISABLED": "true"
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "keywords": [
    "netlify",
    "netlify-plugin"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "ava": "^2.4.0",
    "babel-eslint": "^10.0.3",
    "dox": "^0.9.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "lerna": "^3.16.4",
    "markdown-magic": "^0.1.25",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2"
  },
  "dependencies": {},
  "engines": {
    "node": ">=8.3.0"
  }
}
